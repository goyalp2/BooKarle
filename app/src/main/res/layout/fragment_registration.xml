<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/regis_iv"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="@dimen/size_10"
                android:src="@drawable/app_logo_circle"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/user_details_layout"
                android:contentDescription="@string/regis_iv_1"/>
            <LinearLayout
                android:id="@+id/user_details_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/size_10"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/regis_iv"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/regis_sign_up"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:textColor="@color/grey_900"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_marginTop="@dimen/size_24"
                    android:layout_marginStart="@dimen/size_24"
                    android:layout_marginEnd="@dimen/size_24"
                    android:ems="10"
                    app:boxStrokeColor="@color/ash"
                    app:helperTextEnabled="true"
                    app:helperTextTextColor="@color/red_900"
                    app:hintTextColor="@color/ash">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/regis_hint_first_name"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_marginTop="@dimen/size_8"
                    android:layout_marginStart="@dimen/size_24"
                    android:layout_marginEnd="@dimen/size_24"
                    android:ems="10"
                    app:boxStrokeColor="@color/ash"
                    app:helperTextEnabled="true"
                    app:helperTextTextColor="@color/red_900"
                    app:hintTextColor="@color/ash">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/regis_hint_middle_name"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_marginTop="@dimen/size_8"
                    android:layout_marginStart="@dimen/size_24"
                    android:layout_marginEnd="@dimen/size_24"
                    android:ems="10"
                    app:boxStrokeColor="@color/ash"
                    app:helperTextEnabled="true"
                    app:helperTextTextColor="@color/red_900"
                    app:hintTextColor="@color/ash">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/regis_hint_last_name"/>
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</LinearLayout>